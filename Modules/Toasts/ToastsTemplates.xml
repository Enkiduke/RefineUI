<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <ContainedAlertFrame name="RefineUIToastAlertFrameTemplate" parent="UIParent" hidden="true" inherits="AlertFrameTemplate" virtual="true">
        <Size x="224" y="48"/>
        <Animations>
            <AnimationGroup parentKey="animIn">
                <Alpha fromAlpha="1" toAlpha="0" duration="0" order="1"/>
                <Alpha fromAlpha="0" toAlpha="1" duration="0.15" order="2"/>
            </AnimationGroup>
            <AnimationGroup parentKey="waitAndAnimOut">
                <Alpha startDelay="2.8" fromAlpha="1" toAlpha="0" duration="1.2" parentKey="animOut">
                    <Scripts>
                        <OnFinished>
                            self:GetRegionParent():Hide();
                        </OnFinished>
                    </Scripts>
                </Alpha>
            </AnimationGroup>
        </Animations>
        <Layers>
            <Layer level="BORDER">
                <Texture parentKey="Icon">
                    <Size x="42" y="42"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="3" y="-3"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString parentKey="Label" inherits="GameFontNormalSmall" justifyH="LEFT">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="50" y="-2"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="Name" inherits="GameFontHighlight" justifyH="LEFT" justifyV="MIDDLE">
                    <Size x="168" y="14"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="50" y="-16"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="Amount" inherits="GameFontHighlightLarge" justifyH="LEFT">
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" x="50" y="2"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </ContainedAlertFrame>
</Ui>
